<h1>Listing users</h1>
<% if @users.empty? %>
    No Users Found
    <br>
<% else %>
<table>
  <tr>
    <th>Country</th>
    <th>Employee ID</th>
    <th>Email</th>
    <th>User Type</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.country_iso %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td>
    <% if user.external == 0 %>Employee
    <% elsif user.external == 1 %>External
    <% elsif user.external == 2 %>Administrator
    <% else %>Error
    <% end %>
    </td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<% end %>

<br />

